<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    
</head>
  <body>
    
              </nav>
              <nav class="navbar navbar-default">
                <div class="container">
                  
                  <ul class="nav navbar-nav">
                    <li><a href="#" class="dropdown-item">demo</a></li>
                  </ul>
                 
                </div>
              </nav>

              <div class="container">
                <div class="row">
                    <h1>All Student's List</h1>
                    <br>
                 <table class="table table-striped table-primary">
                  <thead>
                    <tr>
                      <th>Student Name</th>
                      <th>Class</th>
                      <th>Student ID</th>
                      <th>Action</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                   <% if(records.length >0){
                    records.forEach(function(row){
                    %>
                    <tr>
                      
                      <td><%= row.student_name %></td>
                      <td><%= row.class_name %></td>
                      <td><%= row.student_id %></td>
                      <td>
                        <a  class="btn btn-danger btn-xs" data-toggle="modal" data-target="#myModal<%= row.student_id %>"><i class="fa fa-trash"></i></a>
                      </td>
                      <td>
                        <% if(row.status==disabled){%>
                          <a  class="btn btn-danger btn-xs"  data-toggle="modal" data-target="#myModalStatus<%= row.student_id %>"><%=row.status%></a>
                        <%}else{%>
                          <a  class="btn btn-success btn-xs"  data-toggle="modal" data-target="#myModalStatus<%= row.student_id %>"><%=row.status%></a>
                        <%}%>
                      </td>
                    </tr>


            <!-- Modal -->
            <div class="modal fade" id="myModal<%= row.student_id %>" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content #myModal<%= row._id %>-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= row.student_name %></h4>
                  </div>
                  <div class="modal-body">
                    <%= row.class_name %>
                  </div>
                  <div class="modal-footer">
                    <a href="/studentList/delete/<%= row.student_id%>" style="color: #fff;"  class="btn btn-default btn-danger" >Delete</a>
                  </div>
                </div>
                
              </div>
            </div>

            <div class="modal fade" id="myModalStatus<%= row.student_id %>" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content #myModal<%= row._id %>-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= row.student_name %></h4>                                        
                  </div>
                  <div class="modal-body">
                    <%= row.class_name %>
                  </div>
                  <div class="modal-footer">
                    <% if(row.status==disabled){%>
                    <a href="/studentList/enable/<%= row.student_id%>" style="color: #fff;"  class="btn btn-default btn-danger" ><%=row.status%></a>
                    <%}else{%>
                      <a href="/studentList/disable/<%= row.student_id%>" style="color: #fff;"  class="btn btn-default btn-success" ><%=row.status%></a>
                      <%}%>
                  </div>
                </div>
                
              </div>
            </div>
        

                    <%  }) } %>
                  </tbody>
                </table>
              </div>
            </div>

              
    
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
  <script src="https://cdn.ckeditor.com/4.9.1/standard/ckeditor.js"></script>
  
       </body>
     </html>
     