<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="styleses.css">
</head>
  <body>
    
              </nav>
              <nav class="navbar navbar-default">
                <div class="container">
                  
                  <ul class="nav navbar-nav">
                    <li><a href="#" class="dropdown-item">demo</a></li>
                  </ul>
                 
                </div>
              </nav>

              <div class="container">
                <div class="row">
                    <h1>All Teacher's List</h1>
                    <br>
                 <table class="table table-striped table-primary">
                  <thead>
                    <tr>
                      <th>Teacher Image</th>
                      <th>Teacher Name</th>
                      <th>Teacher ID</th>
                      <th>Action</th>
                      <th>Login Status</th>
                      <th>Class Teacher</th>
                    </tr>
                  </thead>
                  <tbody>
                   <% if(records.length >0){
                    records.forEach(function(row){
                    %>
                    <tr>
                      <td><img class="img2" src="./uploads/<%= row.image %>" width="50"></td>
                      <td><%= row.teachername %></td>
                      <td><%= row.teacher_uid %></td>
                      <td>
                        <a  class="btn btn-danger btn-xs" data-toggle="modal" data-target="#myModal<%= row._id %>"><i class="fa fa-trash"></i></a>
                      </td>
                      <td>
                        <% if(row.teacher_status==disabled){%>
                          <a  class="btn btn-danger btn-xs"  data-toggle="modal" data-target="#myModalStatus<%= row._id %>"><%=row.teacher_status%></a>
                        <%}else{%>
                          <a  class="btn btn-success btn-xs"  data-toggle="modal" data-target="#myModalStatus<%= row._id %>"><%=row.teacher_status%></a>
                        <%}%>
                      </td>

                      <td>
                        <% if(row.class_teacher_status==inactive){%>
                          <a  class="btn btn-danger btn-xs"  data-toggle="modal" data-target="#myModalClassTeacher<%= row._id %>"><%=row.class_teacher_status%></a>
                        <%}else{%>
                          <a  class="btn btn-success btn-xs"  data-toggle="modal" data-target="#myModalClassTeacher<%= row._id %>"><%=row.class_teacher_status%></a>
                        <%}%>
                      </td>
                    </tr>

                                <!-- Modal -->
            <div class="modal fade" id="myModal<%= row._id %>" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content #myModal<%= row._id %>-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= row.teachername %></h4>
                  </div>
                  <div class="modal-body">
                    <%= row.teacher_uid %>
                  </div>
                  
                  <div class="modal-footer">
                    <a  style="color: rgb(104, 104, 104);"  class="btn btn-default" data-dismiss="modal">Cencel</a>
                    <a href="/teacherList/delete/<%= row._id%>" style="color: #fff;"  class="btn btn-default btn-danger" >Delete</a>
                  </div>
                </div>
                
              </div>
            </div>


            <div class="modal fade" id="myModalStatus<%= row._id %>" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content #myModal<%= row._id %>-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= row.teachername %></h4>
                  </div>
                  <div class="modal-body">
                    <%= row.teacher_uid %>
                  </div>
                  <div class="modal-footer">
                    <% if(row.teacher_status==disabled){%>
                    <a href="/teacherList/enable/<%= row._id%>" style="color: #fff;"  class="btn btn-default btn-danger" ><%=row.teacher_status%></a>
                    <%}else{%>
                      <a href="/teacherList/disable/<%= row._id%>" style="color: #fff;"  class="btn btn-default btn-success" ><%=row.teacher_status%></a>
                      <%}%>
                  </div>
                </div>
                
              </div>
            </div>


            <div class="modal fade" id="myModalClassTeacher<%= row._id %>" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content #myModal<%= row._id %>-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= row.teachername %></h4>
                  </div>
                  <div class="modal-body">
                    <%= row.teacher_uid %>
                  </div>
                  <div class="modal-footer">
                    <% if(row.class_teacher_status==inactive){%>
                    <p>Click here to class teacher allow Active</p><a href="/teacherList/active/<%= row._id%>"  class="btn btn-default" >Click Here</a>
                    <%}else{%>
                      <p>Click here to class teacher allow Inactive</p><a href="/teacherList/inactive/<%= row._id%>"  class="btn btn-default" >Click Here</a>
                      <%}%>
                  </div>
                </div>
                
              </div>
            </div>

                    <%  }) } %>
                  </tbody>
                </table>
              </div>
            </div>
              
    
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
  <script src="https://cdn.ckeditor.com/4.9.1/standard/ckeditor.js"></script>
  <script src="main.js" defer></script>
       </body>
     </html>
     